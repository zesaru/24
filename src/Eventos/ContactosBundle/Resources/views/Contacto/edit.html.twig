{% extends '::base.html.twig' %}
{% block body %}
<div class="row-row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-list"></i>Editar</h3>
			</div>
		</div>
		<div class="box-content">
			<form action="{{ path('contacto_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} >
			<!-- pegarloquese necesita -->
			<div class="span12">
	                {{ form_errors  (edit_form.contesto) }}
	    			{{ form_label  (edit_form.contesto) }}
	    			{{ form_widget (edit_form.contesto)}}

	    			{{ form_errors  (edit_form.numRespondidos) }}
	    			{{ form_label  (edit_form.numRespondidos) }}
	    			{{ form_widget (edit_form.numRespondidos)}}

	    			{{ form_errors  (edit_form.vocativo) }}
	    			{{ form_label  (edit_form.vocativo) }}
	    			{{ form_widget (edit_form.vocativo)}}

	    			{# Atributos
	    			, { 'attr': {
	                    'class':"input-block-level",}}
	                ui-spinner ui-widget ui-widget-content ui-corner-all
	                'class':"input-small datepick",
	                ,'date', array('widget' => 'single_text','format' => 'dd/MM/yyyy'
            ))
	                #}
			</div>	                
            <div class="span12">
	            <br>
	        		<button class="btn btn-primary"type="submit"><i class="icon-save"></i> Guardar</button>
	        		<a class="btn btn-inverse" href="{{ path('contacto') }}"><i class="icon-reply"></i>
		             Regresar
		        	</a>
	    		</br>
           </div>	                
	        <div class="hide">
	            {{ form(edit_form) }}
	                        
            </div>
            {#{ form_widget(edit_form._token) }#}	

       </form>
		</div>
	</div>
</div>
<script type="text/javascript">
    $('.hide').css('display','none');
</script>
{% endblock body %}


